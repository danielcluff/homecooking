# Server Configuration
SERVER_PORT=8080
SERVER_ENV=development
SERVER_BASE_URL=http://localhost:8080

# Database Configuration
# Choose one: postgres, sqlite, mysql
DATABASE_TYPE=postgres

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=homecooking
DATABASE_USER=postgres
DATABASE_PASSWORD=yourpassword

# SQLite (alternative - set DATABASE_TYPE=sqlite)
# DATABASE_PATH=./data.db

# MySQL (alternative - set DATABASE_TYPE=mysql)
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=homecooking
# DATABASE_USER=root
# DATABASE_PASSWORD=yourpassword

# Authentication
JWT_SECRET=change-me-in-production-use-a-random-secret
REFRESH_SECRET=change-me-in-production-use-a-random-secret
TOKEN_EXPIRY_HOURS=24

# AI Configuration (Optional - disabled by default)
AI_ENABLED=false
AI_PROVIDER=openai  # Options: openai, anthropic, local
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4o
# For local models (Ollama, LM Studio, vLLM):
# AI_BASE_URL=http://localhost:11434/v1

# Auto-apply AI suggestions (admin setting)
AI_AUTO_APPLY=false

# Storage Configuration
STORAGE_TYPE=local  # Options: local, s3
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Email Configuration (Optional - disabled by default)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_FROM=noreply@homecooking.com
